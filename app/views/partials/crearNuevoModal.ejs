

<!-- Modal para crear un nuevo TODO -->
<div class="modal fade" id="crearTodoModal" tabindex="-1" role="dialog" aria-labelledby="crearTodoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="crearTodoModalLabel">Crear Nuevo TODO</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- Formulario para crear un nuevo TODO -->
          <form id="crearTodoForm">
            <div class="form-group">
              <label for="title">Título</label>
              <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
              <label for="description">Descripción</label>
              <textarea class="form-control" id="description" name="description" required></textarea>
            </div>
            <div class="form-group">
              <label for="category">Categoría</label>
              <input type="text" class="form-control" id="category" name="category" required>
            </div>
            <div class="form-group">
              <label  class="custom-control-input" for="completo">Completo:</label>
              <input type="checkbox"  class="custom-control-label" id="completo" name="completo">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="guardarTodo">Guardar</button>
        </div>
      </div>
    </div>
  </div>